<!-- partial -->
<div class="main-panel">
	<!-- CONTENT AQUI! -->

	<div class="content-wrapper">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">


					<div style="display: flex; justify-content: space-between; margin-bottom: 30px">
						<h4 class="card-title">Lista de vôos</h4>
						<button type="button" class="btn btn-success"><a style="color: #fff;"
								href="/createFlight">Adicionar novo voo</a></button>
					</div>


					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th class="center">Origem</th>
									<th class="center">Destino</th>
									<th class="center">Data</th>
									<th class="center">Horário</th>
									<th class="center">Vagas Restantes</th>
									<th class="center">Duração</th>
									<th class="center">Ação</th>
								</tr>

							</thead>
							<tbody>
								<% for (var i in flights) { %>
								<tr>
									<td class="center"><%= flights[i].airportOrigName %> </td>
									<td class="center"><%= flights[i].airportDestName %> </td>
									<td class="center"><%= flights[i].dateFormatted %></td>
									<td class="center"><%= flights[i].hourFormatted %></td>
									<td class="center"><%= flights[i].capacity %></td>
									<td class="center"><%= flights[i].duration %>h</td>
									<td class="center">
										<a href="deleteSala/<%= flights[i].id %> ">
											<button type="button" class="btn btn-sm btn-danger">Cancelar Voo</button>
										</a>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>
	</div>

	<!-- content-wrapper ends -->
	<!-- partial:partials/_footer.html -->
	<footer class="footer">
		<div class="container-fluid clearfix">
			<span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Desenvolvido por Emanoel Johannes e
				Gabriel Pinheiro</i>
			</span>
		</div>
	</footer>
	<!-- partial -->
</div>
