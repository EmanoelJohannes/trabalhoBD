	<!-- CONTENT AQUI! -->

	<div class="content-wrapper">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">


					<div style="display: flex; justify-content: space-between; margin-bottom: 30px">
						<h4 class="card-title">Criação de vôo</h4>
					</div>


					<form class="forms-sample" action="" method="POST">

						<div class="form-group">
							<label for="exampleInputEmail1">Horário de inicio</label>
							<input class="form-control" type="datetime-local" name="date">
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelect1">Origem:</label>
							<select class="form-control" name="departure_id">
								<% for (var i in airports) { %>

								<option value="<%= airports[i].id %>"> <%= airports[i].name %></option>

								<% } %>
							</select>
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelect1">Destino:</label>
							<select class="form-control" name="destination_id">
								<% for (var i in airports) { %>

								<option value="<%= airports[i].id %>"> <%= airports[i].name %></option>

								<% } %>
							</select>
						</div>

						<div class="form-group">
							<label for="exampleFormControlSelect1">Aeronave:</label>
							<select class="form-control" name="aircraft_id">
								<% for (var i in aircrafts) { %>

								<option value="<%= aircrafts[i].id %>"> <%= aircrafts[i].name %> - Capacidade:
									<%= aircrafts[i].capacity %></option>

								<% } %>
							</select>
						</div>

						<div class="form-group">
							<label for="exampleInputEmail1">Duração esperada: </label>
							<input class="form-control" type="number" name="duration">
						</div>

						<div class="form-group">
							<label for="exampleInputEmail1">Valor base</label>
							<input class="form-control" type="number" name="base_value">
						</div>

						<button type="submit" class="btn btn-success mr-2">Criar voo</button>
					</form>


				</div>
			</div>
		</div>
	</div>

